---
import { TAGS } from "@/values/Tags.astro";

import ArduinoIcon from "src/components/icons/ArduinoIcon.astro";

// Datos de habilidades secundarias
const secondarySkills = {
  Arduino: {
    name: "Arduino",
    icon: ArduinoIcon,
  },
};
---

<div class="container mx-auto p-4">
  <!-- Habilidades principales -->
  <h2 class="text-2xl font-bold mb-4">Habilidades de Desarollo de Software</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
    {Object.values(TAGS).map((tag) => (
      <div class="flex flex-col items-center rounded-lg hover:scale-110 hover:bg-black/10 hover:text-black dark:hover:text-white font-black/70 dark:font-white">
        <tag.icon class="w-12 h-12 mb-2" />
        <span class="text-sm font-medium">{tag.name}</span>
      </div>
    ))}
  </div>

  <!-- Habilidades secundarias -->
  <h2 class="text-2xl font-bold mt-8 mb-4">Habilidades Secundarias</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-2">
    {Object.values(secondarySkills).map((skill) => (
      <div class="flex flex-col items-center rounded-lg hover:scale-110 hover:bg-black/10 hover:text-black dark:hover:text-white font-black/70 dark:font-white">
        <skill.icon class="size" />
        <span class="text-xs font-medium">{skill.name}</span>
      </div>
    ))}
  </div>
</div>